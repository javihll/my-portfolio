---
const aboutText = "Soy un desarrollador Full Stack apasionado por crear soluciones innovadoras y eficientes. Con experiencia en tecnologías como JavaScript, React, Node.js y bases de datos relacionales.";
---

<section id="about" class="about-section">
  <div class="container">
    <h2>Acerca de mí</h2>
    <p>{aboutText}</p>
    <img src="/profile-picture.jpg" alt="Foto de perfil" />
  </div>
</section>

<style>
  .about-section {
    padding: 5rem 0;
    background-color: #f8f9fa;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .about-section h2 {
    font-size: 2.5rem;
    color: #333;
  }

  .about-section p {
    font-size: 1.125rem;
    line-height: 1.6;
    color: #666;
  }

  .about-section img {
    width: 300px;
    height: 300px;
    border-radius: 50%;
    object-fit: cover;
  }
</style>
